/* Main.css override default sm2-bar-ui css and general style for demo */

ui-font-size = 22px
ui-font-family = helvetica, arial, verdana, sans-serif

grab()
  cursor -moz-grab
  cursor -webkit-grab
  cursor grab

full-size()
  width 100%
  height 100%
  max-width 100%
  max-height 100%
  top 0
  margin 0 
  padding 0
  
.sm2-bar-ui 
 font-size ui-font-size

.sm2-bar-ui .sm2-main-controls,
.sm2-bar-ui .sm2-playlist-drawer 
 background-color #cccac7 /* non-RGBA fallback */
 background-color rgba(204, 202, 199, 0.15)

.sm2-bar-ui .sm2-inline-texture 
 background transparent

.hide 
  display none
  visibility hidden

#app 
  full-size()

.boxed, .windowed
  full-size()
  text-align center

.actions 
  full-size()
  z-index 2
  position fixed
  z-index 10
  background-color rgba(0,0,0,0.5)


.lyrics 
  font-family Love Ya Like A Sister
  color #363636
  color rgba(22,22,22,0.7)
  font-size 3em
  /* neon */
  text-shadow 0 0 10px #fff, 0 0 20px #fff, 0 0 30px #fff, 0 0 40px #ff00de, 0 0 70px #ff00de, 0 0 80px #ff00de, 0 0 100px #ff00de, 0 0 150px #ff00de
  /*
  fire
  text-shadow 0 0 20px #fefcc9, 10px -10px 30px #feec85, -20px -20px 40px #ffae34, 20px -40px 50px #ec760c, -20px -60px 60px #cd4606, 0 -80px 70px #973716, 10px -90px 80px #451b0e
  */
  animation-name cf3FadeInOut
  animation-timing-function ease-in-out
  animation-iteration-count infinite
  text-align center
  vertical-align middle
  display table-cell
  -webkit-touch-callout none
  -webkit-user-select none
  -khtml-user-select none
  -moz-user-select none
  -ms-user-select none
  user-select none


.lyrics-player 
  full-size()
  display table
  cursor pointer
  
.lyrics-hold
  grab()

.lyrics-text 
  height 1em

.language-selector
  margin 20%
  width 60%
  height 60%
  z-index 10 /* 1px higher than the overlay layer */
  position fixed
  vertical-align middle
  display table

.language-option 
  display table-cell
  vertical-align middle

.modal 
  z-index 11 /* 1px higher than the overlay layer */
  max-height calc(100% - 100px)
   position fixed
     top 50%
     left 50%
   transform translate(-50%, -50%)


@keyframes cf3FadeInOut 
  0% 
    opacity 0
  
  45% 
    opacity 0.5
  
  55% 
    opacity 0.8
  
  100% 
    opacity 1
  


